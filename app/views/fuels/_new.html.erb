<%= form_for '', html: { id: 'fuel_new', class: 'fuel_form', style: 'display: none' } do |f| %>
	<div><%= f.text_field :unit, placeholder: '收费单位', class: 'field' %></div>	
	<div><%= f.text_field :number, placeholder: '账户号', class: 'field' %></div>	
	<div><%= f.text_field :name, placeholder: '户主姓名', class: 'field' %></div>	
	<div><%= f.text_field :address, placeholder: '户主地址', class: 'field' %></div>	
	<div><%= f.text_field :balance, placeholder: '账户余额', class: 'field' %></div>	
	<div>
		<%= f.radio_button :deleted, false, checked: true %>
		<span class="radio">已激活</span>	
		<%= f.radio_button :deleted, true %>
		<span class="radio">未激活</span>	
	</div>	
	<div>
		<a href="#" class="button" onclick="createFuel('#fuel_new')">创建账户</a>
		<a href="#" class="button" onclick="cancelFuel('new')">取消</a>
	</div>
<% end %>