	<!--这个是总的div content-->
	<div id="content">　　

		<div id="JiaoFei">
			<div id="JiaoFeiInf">
				<script type="text/javascript">
					function check(form) {

						if(form.userId.value=='') {
							alert("用户号不能为空!");
							form.userId.focus();
							return false;
						}
						if(form.password.value==''){
							alert("收费公司不能为空!");
							form.password.focus();
							return false;
						}
						return true;
					}
				</script>

