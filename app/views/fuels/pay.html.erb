<!-- 缴费项 -->
<%= form_for '', html: { id: 'fuel_match', class: 'fuel_form' } do |f| %>
	<div>
		<%= f.text_field :number, placeholder: '账户号', class: 'field' %>
	</div>

	<div>
		<%= f.text_field :name, placeholder: '户主姓名', class: 'field' %>
	</div>

	<div>
	  <a href="#" class="button" onclick="matchFuel('#fuel_match')">马上缴费</a>
	</div>
<% end %>

<!-- 订单项 -->
<div id="Infdisplay" style="display: none">
	<div id="Inmformation">
		<%= form_for '', html: { id: 'fuel_edit', class: 'fuel_form' } do |f| %>
			<div><%= f.text_field :unit, placeholder: '收费单位', class: 'field', id: 'fuel_unit' %></div>	
			<div><%= f.text_field :number, placeholder: '账户号', class: 'field', id: 'fuel_number' %></div>	
			<div><%= f.text_field :name, placeholder: '户主姓名', class: 'field', id: 'fuel_name' %></div>	
			<div><%= f.text_field :address, placeholder: '户主地址', class: 'field', id: 'fuel_address' %></div>	
			<div><%= f.text_field :balance, placeholder: '账户余额', class: 'field', id: 'fuel_balance' %></div>	
		<% end %>
	</div>
	<div id="Jine">
		<script type="text/javascript">
			function check(form) {
				if($(form).password.value==''){
					alert("请输入金额");
					form.password.focus();
					return false;
				}
				return true;
			}
		</script>

		<!-- 订单项 -->
		<%= form_for '', html: { id: 'fuel_pay_form', class: 'fuel_form' } do |f| %>
			<div>
				<%= f.text_field :money, placeholder: '金额', class: 'field' %>
			</div>

			<%= f.hidden_field :id, id: 'pay_id' %>

			<div>
			  <a href="#" class="button" onclick="payFuel('#fuel_pay_form')">确认缴费</a>
			</div>
		<% end %>

