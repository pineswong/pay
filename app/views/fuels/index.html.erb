<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh-CN">
<head>
	<title>管理员界面</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="description" content="布尔教育 http://www.itbool.com" />
	<link  href="css/index.css" rel="stylesheet" type="text/css" />
	<link href="css/menustyle.css" rel="stylesheet">
	<link href="css/ManagerLogin.css" rel="stylesheet">
	<link href="css/style.css" rel="stylesheet" />
	<script type="text/javascript" src="js/startMove.js"></script>      
	<script type="text/javascript" src="js/jQuerystartMove.js"></script>

</head>
<body>
	<!--这个是总的div content-->
	<div id="content">
		
		<div id="ManagerIndex">
			<div id="manager-left" class="fuel_sidebar">
				<div class="title"><h2>管理员信息<%= link_to '注销', logout_path, method: :delete %></h2></div>
				<div class="admin">用户名：<%= current_user.username %></div>
				<div class="admin">Email：<%= current_user.email %></div>
				<div class="admin">手机号码：<%= current_user.phone %></div>

				<div class="title" style="margin-top: 28px;"><h2>账户管理</h2></div>
				<div class="link"><a href="#" class="button_a" style="color: #fff; margin-bottom: 20px;" onclick="newFuel()">增加账户</a></div>
				<div class="link">
					<%= form_for '', html: { id: 'fuel_search', class: 'fuel_form', style: 'padding: 0' } do |f| %>
						<%= f.text_field :number, placeholder: '账户编号', class: 'field' %>
						<a href="#" class="button" onclick="searchFuel('#fuel_search')">账户检索</a>
					<% end %>				
				</div>

				<div class="title" style="margin-top: 28px;"><h2>缴费记录管理</h2></div>
				<div class="link"><a href="<%= records_path %>" class="button_a" style="color: #fff; margin-bottom: 20px;">查询记录</a></div>

			</div>
			<div id="manager-right">
				<!-- index -->
				<table id="fuel_index" border="0" cellpadding="0" cellspacing="0">
					<tr>
						<th class="no">序号</th>
						<th class="unit">收费单位</th>
						<th class="number">账户号</th>
						<th class="name">户主姓名</th>
						<th class="address">户主地址</th>
						<th class="balance">账户余额</th>
						<th class="deleted">账户激活状态</th>
						<th class="operate" colspan="2">操作</th>
					</tr>
					<%= render @fuels %>
				</table>

				<!-- new -->
				<%= render 'new' %>

				<!-- edit -->
				<%= render 'edit' %>
			</div>
		</div>
		
	</div>
</body>
</html>