<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="zh-CN">
<head>
  <title>管理员登录</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="description" content="布尔教育 http://www.itbool.com" />
  <link  href="css/index.css" rel="stylesheet" type="text/css" />
  <link href="css/menustyle.css" rel="stylesheet">
  <link href="css/ManagerLogin.css" rel="stylesheet">

</head>
<body>
  <link href="css/style.css" rel="stylesheet" />
  <script type="text/javascript" src="js/startMove.js"></script>      
  <script type="text/javascript" src="js/jQuerystartMove.js"></script>
  
  <!--这个是总的div content-->
  <div id="content">　　

    <div id="Login">
     <div id="Login-left"></div>
     <div id="Login-right">
      <br />
      <br />
      <br />
      <br />
      <br />
      <br />

      <br />
      <br />
      <script type="text/javascript">
       function check(form) {

        if(form.userId.value=='') {
          alert("用户号不能为空!");
          form.userId.focus();
          return false;
        }
        if(form.password.value==''){
          alert("收费公司不能为空!");
          form.password.focus();
          return false;
        }
        return true;
      }
    </script>

<!--     <form action="" method="post">
      管理员帐号
      <input type=text name="userId" size="19" value="" >
      <br />
      <br />
      登录　密码      
      <input type="password" name="password" size="19" value=""/>      

      <input type=submit name="submit1" value="登录" onclick="return check(this.form)">  

    </form>   
 -->
    <%= form_for '', html: { id: 'login_form', class: 'fuel_form' } do |f| %>
      <div>
        <%= f.text_field :username, placeholder: '管理员账号', class: 'field' %>
      </div>

      <div>
        <%= f.password_field :password, placeholder: '密码', class: 'field' %>
      </div>

      <div>
        <%= f.submit '登录', class: 'button' %>
      </div>
    <% end %>

  </div>
</div>

</div>
</body>
</html>